@model IEnumerable<FinalProject.Models.AspNetUser>

@{
    ViewBag.Title = "Users";
}

<h2>All Users - @Model.Count()</h2>

<p>
    @Html.ActionLink("Bank accounts", "Index", "BankAccounts")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Username: @Html.TextBox("username", @String.Empty, new { placeholder = "Enter mobile number" })
        <input type="submit" value="Search" />
    </p>
}
<div style="width:100%;">
    <div class="MessageFromController" style="color:green;margin-left:40%;margin-right:40%">@ViewBag.Message</div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.ActionLink("Transfer Discount", "TransferDiscount", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want transfer discount?');" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Reset Password", "ResetPassword", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to reset password?');" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete it?');" })
            </td>
        </tr>
    }

</table>
